            <label for="motif">Motif :</label>
            <textarea name="motif" class="form-control" id="motif" rows="3"></textarea>
        </div>


    <input type="submit" class="btn btn-primary float-right" value="Enregistrer">
    <button type=""  style="" class="btn btn-primary float-right" onclick="window.history.go(-1)" >Retour</button>
    </form>
    </div>
{% endblock %}
