{% extends 'base.html.twig' %}

{% block title %}Annuler la sortie | {{ parent() }}{% endblock %}

{% block main %}

    <div class="container" xmlns="http://www.w3.org/1999/html">
        <h1 align="center">Annuler une sortie</h1>
        <p>Nom de la sortie : {{ sortie.getNom() }}</p>
        <p>Date de la sortie :  {{ sortie.getDateDebut|date("d/m/Y Ã  h:i") }}</p>
        <p>Ville organisatrice : {{ sortie.getNoSite().getNomSite() }}</p>
